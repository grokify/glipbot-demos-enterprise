{
    "name": "Glipbot for GetSatisfaction",
    "description": "A Glipbot to query Get Satisfaction",
    "repository": "https://github.com/grokify/glip-hubot-getsatisfaction",
    "logo": "https://raw.githubusercontent.com/grokify/hubot-getsatisfaction/master/docs/images/hubot_getsatisfaction.png",
    "keywords": ["Glip","Glipbot","Hubot","Get Satisfaction"],
    "website": "https://github.com/grokify",
    "addons": [
        "redistogo:nano",
        "papertrail:choklad"
    ],
    "formation": {
        "web": {
            "quantity": 1,
            "size": "Hobby"
        }
    },
    "env": {
        "HUBOT_GLIP_EMAIL": {
            "description": "Glipbot user email",
            "value": "",
            "required": true
        },
        "HUBOT_GLIP_PASSWORD": {
            "description": "Glipbot user password",
            "value": "",
            "required": true
        },
        "HUBOT_GLIP_HOST": {
            "description": "Glip host",
            "value": "glip.com",
            "required": false
        },
        "HUBOT_JIRA_LINKIFIER_PROJECT_PREFIXES": {
            "description": "JIRA prefixes to inflate",
            "value": "",
            "required": true
        },
        "HUBOT_JIRA_LINKIFIER_JIRA_URL": {
            "description": "JIRA URL",
            "value": "",
            "required": false
        },

        "HUBOT_GETSATISFACTION_COMPANY": {
            "description": "Get Satisfaction Company Name",
            "value": "ringcentral",
            "required": false
        },
        "HUBOT_ZENDESK_USER": {
            "description": "Zendesk user email",
            "value": "",
            "required": true
        },
        "HUBOT_ZENDESK_PASSWORD": {
            "description": "Zendesk user password",
            "value": "",
            "required": true
        },
        "HUBOT_ZENDESK_SUBDOMAIN": {
            "description": "Zendesk Host Subdomain",
            "value": "",
            "required": true
        },
        "HUBOT_ROBOT_NAME": {
            "description": "Bot name - used for commands",
            "value": "gsbot",
            "required": false
        },
        "SF_INSTANCE_URL": {
            "description": "url of your salesforce instance eg. https://na2.salesforce.com",
            "value": "",
            "required": false
        },
        "SF_CONSUMER_KEY": {
            "description": "consumer key from the Remote Access Setup page in Salesforce",
            "value": "",
            "required": true
        },
        "SF_CONSUMER_SECRET": {
            "description": "consumer secret from the Remote Access Setup page in Salesforce",
            "value": "",
            "required": true
        },
        "SF_USERNAME": {
            "description": "a valid salesforce login",
            "value": "",
            "required": true
        },
        "SF_PASSWORD": {
            "description": "password and security token mashed together",
            "value": "",
            "required": false
        }
    }
}
